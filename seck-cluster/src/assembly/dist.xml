<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>dist</id>
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>${project.artifactId}-${project.version}</baseDirectory>
  <includeSiteDirectory>false</includeSiteDirectory>
  <dependencySets>
    <dependencySet>
    <!-- 
      <outputDirectory>lib</outputDirectory>
      <unpack>false</unpack>
      <useProjectArtifact>true</useProjectArtifact>
      <useTransitiveDependencies>true</useTransitiveDependencies>
      <unpackOptions />
       -->
      <outputDirectory></outputDirectory>
      <outputFileNameMapping></outputFileNameMapping>
      <unpack>true</unpack>
      <scope>runtime</scope>
      <includes>
        <include>gnu.getopt:java-getopt</include>
<!-- 
        <include>org.ccil.cowan.tagsoup:tagsoup</include>
        <include>com.googlecode.juniversalchardet:juniversalchardet:1.0.3</include>
 -->
        <include>org.apache.tika:tika-core</include>
<!-- 
        <include>org.apache.tika:tika-parsers</include>
 -->
        <include>org.apache.hadoop:hadoop-core</include>
        <include>org.apache.hadoop:zookeeper</include>
        <include>com.google.protobuf:protobuf-java</include>
        <include>commons-logging</include>
        <include>log4j</include>
        <include>org.apache.hbase:hbase</include>
        <include>com.pcwerk:seck-lib</include>
      </includes>
    </dependencySet>
  </dependencySets>
  <fileSets>
     <fileSet>
       <directory>${basedir}/src/main/resources/vagrant-hadoop-cluster</directory>
       <outputDirectory>vagrant-hadoop-cluster</outputDirectory>
       <excludes>
         <exclude>**/.vagrant/**</exclude>
       </excludes>
       <includes></includes>
     </fileSet>
  </fileSets>
  <moduleSets>
    <moduleSet>
      <includes></includes>
      <sources></sources>
    </moduleSet>
  </moduleSets>
</assembly>
